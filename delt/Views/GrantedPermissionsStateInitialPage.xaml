<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="delt.Views.GrantedPermissionsStateInitialPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:VapoliaSVG="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms">

    <StackLayout>

        <Label
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            Style="{StaticResource title1}"
            Text="Andere User berechtigen" />

        <Grid

            ColumnDefinitions="*"
            ColumnSpacing="0"
            RowDefinitions="Auto,Auto,Auto,Auto"
            VerticalOptions="CenterAndExpand">

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="25,0"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                Style="{StaticResource bodySmall}"
                Text="Berechtigen Sie andere Personen mit einem Longines Equestrian Account dazu gewisse Aktionen (z.B.: Online melden) in Ihrem Namen durchzuführen."
                TextColor="{DynamicResource Label}" />

            <TableView
                Grid.Row="1"
                Grid.Column="0"
                HasUnevenRows="true"
                HeightRequest="200"
                Intent="Settings"
                VerticalOptions="Center">
                <TableRoot>
                    <TableSection TextColor="{DynamicResource SecondaryLabel}">
                        <ViewCell>
                            <Grid
                            BackgroundColor="{DynamicResource SecondarySystemGroupedBackground}"
                            ColumnDefinitions="*,Auto"
                            RowDefinitions="*"
                            RowSpacing="0"
                            VerticalOptions="Start">
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource bodySmall}"
                                    Text="Andere User berechtigen"
                                    TextColor="{DynamicResource Label}"/>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource footnote}"
                                    Text="Andere führen Aktionen in Ihrem Namen aus"
                                    TextColor="{DynamicResource Placeholder}"/>
                                <VapoliaSVG:SvgImage
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    HeightRequest="20"
                                    Svg="Arrow.svg"
                                    WidthRequest="20 />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ChangeToGermanLanguageCommand}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </ViewCell>
                        <ViewCell>
                            <Grid
                            BackgroundColor="{DynamicResource SecondarySystemGroupedBackground}"
                            ColumnDefinitions="*,Auto"
                            RowDefinitions="*"
                            RowSpacing="0"
                            VerticalOptions="Center">
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource bodySmall}"
                                    Text="Meine Berechtigungen"
                                    TextColor="{DynamicResource Label}"
                                    />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource footnote}"
                                    Text="Sie führen Aktionen in einem anderen Namen aus"
                                    TextColor="{DynamicResource Placeholder}"
                                   />
                                <VapoliaSVG:SvgImage
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    HeightRequest="20"
                                    Svg="Arrow.svg"
                                    WidthRequest="20" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ChangeToGermanLanguageCommand}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>


                <Button
                Grid.Row="2"
                Grid.Column="0"
                Margin="24"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="CenterAndExpand"
                Style="{DynamicResource buttonStyle}"
                Text="􀎻 Berechtigungs-QR-Code scannen"
                    />

        </Grid>
    </StackLayout>

</ContentPage>

