<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="delt.Views.PermissionsGrantedSelfPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:VapoliaSVG="clr-namespace:XamSvg.XamForms;assembly=XamSvg.XamForms">

    <StackLayout>

        <Label
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            Style="{StaticResource title1}"
            Text="Erteilte Berechtigungen" />

        <Grid
            ColumnDefinitions="*"
            ColumnSpacing="0"
            RowDefinitions="Auto,Auto,Auto,Auto"
            VerticalOptions="CenterAndExpand">

            <VapoliaSVG:SvgImage
                Grid.Row="0"
                Grid.Column="0"
                HeightRequest="41"
                HorizontalOptions="CenterAndExpand"
                Svg="ExclamationMarkBlue.svg"
                WidthRequest="39" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Margin="25,0"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                Style="{StaticResource headline}"
                Text="Berechtigungslinks können nicht durch Ihren eigenen Longines Equestrian Account aktiviert werden."
                TextColor="{DynamicResource Label}" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="25,0"
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                Style="{StaticResource body}"
                Text="Der Link muss von der Person geöffnet werdnen, die Berechtigungen erteilen oder erhalten soll."
                TextColor="{StaticResource SecondaryLabel}" />

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="24,36,24,0"
                HorizontalOptions="FillAndExpand"
                Style="{DynamicResource buttonStyle}"
                Text="Link und Anleitung teilen" />

        </Grid>
    </StackLayout>
</ContentPage>

